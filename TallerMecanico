--Selects
select *
from mecanico;
select *
from cliente;
select *
from hoja_parte;
select *
from vehiculo;
--to_char le da un formato, este formato acepta dos valores,
select to_char(fecha_entrada, 'dd/mm/yyyy') --El primer par√°metro es el valor que desea formatear y el segundo es la plantilla que define el formato de salida.
from vehiculo;

select *
from factura;
--Operaciones con update
update vehiculo
set fecha_entrada = '2020/12/3'
where fecha_entrada = '2016/12/2';
update cliente
set apellidos = 'Guevara Gomez'
where apellidos = 'Guevara Aguirre';
--Alter tipo de dato
alter table factura
alter column Costo_manoObra type money;